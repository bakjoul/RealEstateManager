<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DetailsFieldView">
        <attr name="detailsImageSrc" format="reference" />
        <attr name="detailsLabel" format="string" />
        <attr name="detailsTextPreview" format="string" />
    </declare-styleable>

    <declare-styleable name="SettingsSpinnerView">
        <attr name="spinnerImageSrc" format="reference" />
        <attr name="spinnerLabel" format="string" />
        <attr name="spinnerDescription" format="string" />
        <attr name="spinnerEntries" format="reference" />
    </declare-styleable>

    <declare-styleable name="PlusMinusView">
        <attr name="plusMinusImageSrc" format="reference" />
        <attr name="plusMinusLabel" format="string" />
        <attr name="plusMinusErrorText" format="string" />
        <attr name="plusMinusDrawablePadding" format="dimension" />
        <attr name="plusMinusEditTextWidth" format="dimension" />
        <attr name="plusMinusImeOptions" format="enum">
            <enum name="actionNext" value="0" />
            <enum name="actionDone" value="1" />
        </attr>
    </declare-styleable>
</resources>
