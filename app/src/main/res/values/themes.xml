<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RealEstateManager" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="PointOfInterest">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/poi_border</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="CustomCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">#FFF9F9F9</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>
