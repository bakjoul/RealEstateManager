<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RealEstateManager" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="textInputStyle">@style/Theme.RealEstateManager.TextInputLayout</item>
    </style>

    <style name="PointOfInterest">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/poi_border</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PointOfInterestTablet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/poi_border</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="CustomCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="cardBackgroundColor">?android:colorBackground</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="LoanSimResultsCardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="PropertyTypeRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/type_selector</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@drawable/type_text_color</item>
    </style>

    <style name="Theme.RealEstateManager.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense" />

    <style name="Chip" parent="Widget.Material3.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FloatingDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SlideInRightAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SlideInBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="AddressFieldErrorTextAppearance">
        <item name="android:textSize">0sp</item>
    </style>

    <style name="NegativeButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">7dp</item>
        <item name="backgroundTint">?android:colorBackground</item>
    </style>

    <style name="PositiveButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">7dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="AutoCompleteTextViewLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="AddPhotoButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/blue_toolbar</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintHorizontal_weight">0.5</item>
        <item name="cornerRadius">7dp</item>
    </style>

    <style name="CustomRangeSlider" parent="Widget.Material3.Slider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackColorActive">@color/blue</item>
        <item name="trackColorInactive">@color/blue_toolbar</item>
        <item name="thumbColor">@color/blue</item>
        <item name="tickVisible">false</item>
    </style>

    <style name="FilterButton" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconPadding">4dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">7dp</item>
    </style>

    <style name="RangeSliderHelperTextTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ButtonToggleGroupButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_toggle_group_background_tint</item>
        <item name="android:textColor">@color/button_toggle_group_text_color</item>
    </style>

    <style name="ResetButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
