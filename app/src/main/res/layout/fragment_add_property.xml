<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/type_border_unchecked"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/type_selector"
            android:button="@null"
            android:drawableStart="@drawable/type_flat_selector"
            android:drawablePadding="4dp"
            android:paddingHorizontal="8dp"
            android:text="Flat"
            android:textColor="@drawable/type_text_color" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/type_selector"
            android:button="@null"
            android:drawableStart="@drawable/type_house_selector"
            android:drawablePadding="4dp"
            android:paddingHorizontal="8dp"
            android:text="House"
            android:textColor="@drawable/type_text_color" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/type_selector"
            android:button="@null"
            android:drawableStart="@drawable/type_duplex_selector"
            android:drawablePadding="6dp"
            android:paddingHorizontal="8dp"
            android:text="Duplex"
            android:textColor="@drawable/type_text_color" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/type_selector"
            android:button="@null"
            android:drawableStart="@drawable/type_penthouse_selector"
            android:drawablePadding="6dp"
            android:paddingHorizontal="8dp"
            android:text="Penthouse"
            android:textColor="@drawable/type_text_color" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>