<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_property_photo_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/add_property_photo_item_ImageView"
        android:layout_width="@dimen/photo_width"
        android:layout_height="@dimen/photo_height"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/penthouse_upper_east_side" />

    <TextView
        android:id="@+id/add_property_photo_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#50000000"
        android:lines="1"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/add_property_photo_item_ImageView"
        app:layout_constraintEnd_toEndOf="@id/add_property_photo_item_ImageView"
        app:layout_constraintStart_toStartOf="@id/add_property_photo_item_ImageView"
        tools:text="Facade" />

    <ImageButton
        android:id="@+id/add_property_photo_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@null"
        android:contentDescription="@string/add_property_delete_photo_desc"
        android:src="@drawable/baseline_delete_24"
        app:layout_constraintEnd_toEndOf="@id/add_property_photo_item_ImageView"
        app:layout_constraintTop_toTopOf="@id/add_property_photo_item_ImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
