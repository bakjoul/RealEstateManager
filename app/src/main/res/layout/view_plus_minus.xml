<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_plus_minus_label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="2dp"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/view_plus_minus_increment_button"
        app:layout_constraintStart_toStartOf="@id/view_plus_minus_decrement_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:drawableStartCompat="@drawable/baseline_home_16"
        tools:text="Rooms" />

    <ImageButton
        android:id="@+id/view_plus_minus_decrement_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:contentDescription="@null"
        android:src="@drawable/baseline_remove_24"
        app:backgroundTint="@color/blue_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_plus_minus_label_text"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/view_plus_minus_value_EditText"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginTop="5.5dp"
        android:layout_marginBottom="5.5dp"
        android:background="@drawable/plus_minus_value_border"
        android:gravity="center"
        android:hint="@null"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:lines="1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/view_plus_minus_decrement_button"
        app:layout_constraintEnd_toStartOf="@id/view_plus_minus_increment_button"
        app:layout_constraintStart_toEndOf="@id/view_plus_minus_decrement_button"
        app:layout_constraintTop_toTopOf="@id/view_plus_minus_decrement_button"
        tools:text="10" />

    <ImageButton
        android:id="@+id/view_plus_minus_increment_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="@color/blue_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/view_plus_minus_decrement_button"
        app:layout_constraintStart_toEndOf="@id/view_plus_minus_value_EditText"
        app:layout_constraintTop_toTopOf="@id/view_plus_minus_decrement_button"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>